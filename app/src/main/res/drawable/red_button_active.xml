<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape android:shape="oval"  >
            <corners android:radius="8dip" />
            <stroke android:width="4dip" android:color="@color/yellowDark" />
            <solid android:color="@color/yellowBright"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="oval"  >
            <corners android:radius="6dip" />
            <stroke android:width="4dip" android:color="@android:color/transparent" />
            <solid android:color="@color/yellowBrightest"/>
        </shape>
    </item>
</selector>